<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".LoginorregisterActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/lottietwee"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="WELCOME!"
        android:fontFamily="@font/drukwide"
        android:textColor="@color/minttwo"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We are so thrilled to have you with us!"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="italic"
        android:textColor="@color/black"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/minttwo"
        android:textSize="15sp"
        app:strokeWidth="2dp"
        android:fontFamily="@font/drukwide"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/drukwide"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/register_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="REGISTER"
        android:backgroundTint="@color/minttwo"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        app:strokeWidth="2dp"
        android:fontFamily="@font/drukwide"/>


</LinearLayout>